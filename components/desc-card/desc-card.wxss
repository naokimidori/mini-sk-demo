.desc-card {
  width: 92vw;
  min-height: 120rpx;
  margin: 0 auto 18rpx;
  padding: 24rpx 12rpx;
  /* border: 1px solid #ccc; */
  border-radius: 8rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.3);
}

.desc-card .avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.desc-card .content {
  flex: 1;
}

.desc-card .content .name {
  font-size: 30rpx;
  font-weight: bold;
}

.desc-card .content .desc {
  font-size: 24rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}